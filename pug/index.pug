doctype html
html
  head
    meta(charset="utf-8")
    title Mr. Burger
    meta(content="" name="author")
    meta(content="" name="description")
    meta(content="" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    link(rel='stylesheet' href='css/normalize.css')
    link(rel='stylesheet' href='css/main.css')

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body
    .points
        - var n = 0;
        ul.points__list
            while n < 8
                li.points__item
                    a(href="#section-" + (n + 1) class="points__link" + ((n == 0) ? " points__link_active" : ""))
                        - n++;
    .wrapper
        .main
            include section/_preview
            include section/_favorite
            include section/_reviews